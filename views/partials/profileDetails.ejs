<div class="container mx-auto p-4 relative rounded-lg shadow-lg overflow-hidden bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">
    <img src="<%= user.backgroundImage %>" alt="back cover" class="w-full h-full object-cover absolute top-0 left-0 opacity-50">
    
    <div class="relative z-10 flex flex-col items-center">
        <img src="<%= user.profilepic %>" alt="profile image" class="w-[12vw] h-[12vw] rounded-full mt-[20vh] border-4 border-white shadow-xl object-cover transform transition-transform duration-500 hover:scale-105">
        
        <h2 class="text-3xl font-semibold text-white mt-5 drop-shadow-md"><%= user.name %></h2>
        <p class="text-lg text-white opacity-80 mt-2 drop-shadow-sm"><%= user.email %></p>
    </div>
</div>

<div class="flex justify-end mt-6 space-x-4 pr-10">
    <button class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md transform transition-transform duration-500 hover:bg-blue-700 hover:scale-105">
        <a href="/users/edit-profile/<%= user._id%>">Edit Profile</a>
    </button>
    <button class="px-6 py-3 bg-red-600 text-white font-semibold rounded-lg shadow-md transform transition-transform duration-500 hover:bg-red-700 hover:scale-105">
        <a href="/users/logout">Logout</a>
    </button>
</div>
